{
  "tool": "nmap",
  "common_params": ["target", "p", "T", "oA"],
  "parameters": {
    "target": {
      "type": "text",
      "description": "Target host",
      "required": true,
      "position": "last"
    },
    "p": {
      "type": "text",
      "flag": "-p",
      "description": "Port specification",
      "default": "1-65535"
    },
    "oA": {
      "type": "path",
      "flag": "-oA",
      "description": "Output to all formats",
      "required": false
    },
    "T": {
      "type": "enum",
      "flag": "-T",
      "description": "Timing Template",
      "options": ["0", "1", "2", "3", "4", "5"],
      "default": "4"
    }
  },
  "flags": {
    "sS": {
      "flag": "-sS",
      "description": "TCP SYN scan"
    },
    "sV": {
      "flag": "-sV",
      "description": "Service version detection"
    },
    "O": {
      "flag": "-O",
      "description": "OS detection"
    },
    "A": {
      "flag": "-A",
      "description": "Aggressive scan"
    }
  }
}
