{
  "tool": "nikto",
  "common_params": ["host", "port", "ssl", "tuning", "output"],
  "parameters": {
    "host": {
      "type": "text",
      "flag": "-h",
      "required": true
    },
    "port": {
      "type": "number",
      "flag": "-p",
      "default": 80,
      "min": 1,
      "max": 65535
    },
    "ssl": {
      "type": "boolean",
      "flag": "-ssl",
      "description": "Force SSL mode"
    },
    "tuning": {
      "type": "enum",
      "flag": "-Tuning",
      "options": ["1", "2", "3", "4", "5", "6", "7", "8", "9", "x"],
      "default": "x"
    },
    "output": {
      "type": "path",
      "flag": "-o",
      "required": false
    }
  },
  "flags": {
    "no_ssl": {
      "flag": "-nossl",
      "description": "Disable SSL"
    },
    "verbose": {
      "flag": "-v",
      "description": "Verbose mode"
    },
    "evasion": {
      "flag": "-evasion",
      "description": "Encoding evasion"
    },
    "update": {
      "flag": "-update",
      "description": "Update databases"
    }
  }
}
