# CRACK Environment Variables
# Copy this file to .env and set your values

# Neo4j Configuration (Required for graph features)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_secure_password_here
NEO4J_DATABASE=neo4j

# Optional: Connection tuning
# NEO4J_MAX_POOL_SIZE=50
# NEO4J_CONNECTION_TIMEOUT=60

# CRACK Configuration
# CRACK_CONFIG_DIR=~/.crack

# Router Configuration (Advanced)
# CRACK_ROUTER_BACKEND=auto  # auto, neo4j, sql, json
# CRACK_ROUTER_FALLBACK=true
# CRACK_ROUTER_CACHE=true
